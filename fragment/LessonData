fragment LessonData on Lesson {
  id
  relativeUrl
  slug
  translatedDescription
  translatedTitle
  key
  curatedChildren(includeUnlisted: false) {
    ... on LearnableContent {
      ...LearnableContentMetadata
      __typename
    }
    ... on Exercise {
      exerciseLength
      isSkillCheck
      sponsored
      thumbnailUrl
      timeEstimate {
        lowerBound
        upperBound
        __typename
      }
      __typename
    }
    __typename
  }
  __typename
}