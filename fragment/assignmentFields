fragment AssignmentFields on Assignment {
  id
  studentKaids
  isDraft
  assignmentStatus
  subjectSlug
  numStudentsCompleted
  assignedDate
  startDate
  dueDate
  contentDescriptors
  domainId
  courseId
  unitId
  lessonId
  contents {
    id
    title: translatedTitle
    kind
    defaultUrlPath
    __typename
  }
  exerciseConfig {
    itemPickerStrategy
    __typename
  }
  title
  instructions
  configuredActivityInputs
  __typename
}