query teacherAssignments($contentDescriptor: String!) {
  user {
    id
    assignmentsForContentInClassroomsTaughtByThisUser(
      contentDescriptor: $contentDescriptor
    ) {
      ...AssignmentFields
      classroom {
        id
        cacheId
        name
        signupCode
        descriptor
        topics {
          id
          key
          slug
          title
          iconPath
          __typename
        }
        __typename
      }
      __typename
    }
    __typename
  }
}