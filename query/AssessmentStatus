query AssessmentStatus($slug: String!) {
  user {
    id
    assessmentData {
      assessmentStatus(assessmentSlug: $slug) {
        status
        assessment {
          id
          name
          surveySlug
          __typename
        }
        task {
          id
          expirationTime
          questionsCompleted
          estimatedQuestionsRemaining
          __typename
        }
        __typename
      }
      __typename
    }
    __typename
  }
}