query getStudentSettings($kaid: String!) {
  student: user(kaid: $kaid) {
    id
    nickname
    username
    birthdate
    userLanguage
    region
    soundOn
    muteVideos
    showCaptions
    hideVisual
    prefersReducedMotion
    noColorInVideos
    isDistrictSynced
    settingsCanBeModByLoggedInUser
    userDistrictInfos {
      id
      districtProvidedBirthMonth
      districtProvidedBirthYear
      __typename
    }
    __typename
  }
}
