query exerciseEditorQuery($contentId: String!) {
  exerciseRevisionById(id: $contentId) {
    ...ExerciseRevision
    __typename
  }
  contentEditingStatus {
    editingDisabled
    publishDisabled
    __typename
  }
  isEditableByCurrentUser(contentId: $contentId, contentKind: "Exercise")
  isPublishableByCurrentUser(contentId: $contentId, contentKind: "Exercise")
  user {
    id
    nickname
    __typename
  }
}

fragment AssessmentItemRevision on AssessmentItemRevision {
  id
  contentKind
  contentId
  sha
  creationDate
  name
  authorNames
  itemData
  itemShapeType
  perseusApiMajorVersion
  requiresScreenOrMouse
  aiGenerated
  tags
  __typename
}

fragment ExerciseRevision on ExerciseRevision {
  id
  contentKind
  contentId
  sha
  creationDate
  authorKey
  doNotPublish
  sourceKaLocale
  sourceLanguage: sourceKaLocale
  slug
  name: slug
  title
  displayName: title
  prettyDisplayName: title
  description
  descriptionHtml: description
  customTitleTag
  customDescriptionTag
  thumbnailData
  thumbnailCache
  sponsored
  alternateSlugs
  authorName
  covers
  prerequisites
  relatedContent
  assessmentItemTags
  difficultyLevel
  suggestedCompletionCriteria
  trackingDocumentUrl
  problemTypeKind
  interimAssessmentType
  numQuestionsPerProblemType
  problemTypes {
    contentId
    name
    relatedVideos
    items {
      id
      sha
      perseusApiMajorVersion
      requiresScreenOrMouse
      aiGenerated
      __typename
    }
    __typename
  }
  assessmentItems {
    ...AssessmentItemRevision
    __typename
  }
  listed
  hasLintErrors
  __typename
}