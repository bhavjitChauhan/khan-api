query khanLibraryGetFolder($id: String!) {
  folderById(id: $id) {
    ...Folder
    __typename
  }
}

fragment BaseFolder on Folder {
  id
  name
  kaLocale
  isEmpty
  __typename
}

fragment Folder on Folder {
  ...BaseFolder
  courses {
    ...PublishedCourseRevisionFragment
    __typename
  }
  __typename
}

fragment PublishedCourseRevisionFragment on CourseRevision {
  id
  contentId
  kaLocale
  title
  importable
  allowedExerciseTypes
  hasUnpublishedChanges
  published {
    id
    slug
    title
    listed
    masteryEnabled
    domainSlug
    domainId: parentTopicId
    courseSnapshotId
    __typename
  }
  __typename
}