query allEssaySessions($contentDescriptor: String!) {
  allEssaySessions {
    id
    essayTitle
    lastUpdated
    currentStage
    assignmentId: assignmentID
    completed
    sampleEssayName
    essayMode
    __typename
  }
  user {
    id
    assignmentsForContent(contentDescriptor: $contentDescriptor) {
      id
      title
      dueDate
      configuredActivityInputs
      __typename
    }
    __typename
  }
}