query getTeacherCampaign($id: String!) {
  teacherCampaign(id: $id) {
    id
    live
    eligibleLocale
    eligibleCountryCodes
    audience
    campaignName
    promoSite
    signupStartDate
    startDate
    shutdownDate
    bannerBeforeHeader
    bannerBeforeCopy
    bannerBeforeGraphic
    colorBg
    colorBgAccent
    __typename
  }
}