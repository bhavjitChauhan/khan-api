query getTeacherCampaign($id: String!) {
  teacherCampaign(id: $id) {
    id
    live
    eligibleLocale
    eligibleCountryCodes
    campaignName
    promoSite
    signupStartDate
    startDate
    shutdownDate
    bannerBeforeHeader
    bannerBeforeCopy
    bannerBeforeGraphic
    colorBg
    colorBgAccent
    steps {
      id
      header
      body
      graphic
      cta
      headerShort
      __typename
      ... on TeacherCampaignVideoStep {
        numberRequired
        handouts
        manualHandouts
        manualHandoutDescriptions
        videos
        description
        __typename
      }
      ... on TeacherCampaignResponseStep {
        description
        exercises {
          title
          description
          introduction
          questions
          samples
          __typename
        }
        __typename
      }
      ... on TeacherCampaignAwardStep {
        headerOnCompletion
        bodyOnCompletion
        certificate
        extraCredit
        nextDrawTime
        useGenericIcon
        __typename
      }
    }
    __typename
  }
}