query findUsersByNickname($nickname: String!) {
  usersSearchByNickname(nickname: $nickname) {
    users {
      ...UserFields
      ...FilterFields
      __typename
    }
    __typename
  }
}

fragment FilterFields on User {
  id
  nickname
  coaches {
    id
    email
    username
    kaid
    __typename
  }
  joined
  discussionBanned
  isChild
  points
  __typename
}

fragment UserFields on User {
  id
  kaid
  lastLogin
  points
  profileRoot
  nickname
  joined
  authEmails
  userId
  username
  coaches {
    id
    email
    username
    kaid
    __typename
  }
  __typename
}