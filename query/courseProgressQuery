query courseProgressQuery($topicId: String!) {
  user {
    id
    courseProgress(topicId: $topicId) {
      currentMasteryV2 {
        percentage
        pointsEarned
        __typename
      }
      masteryMap {
        progressKey
        status
        __typename
      }
      unitProgresses {
        currentMasteryV2 {
          percentage
          pointsEarned
          __typename
        }
        unitId
        __typename
      }
      __typename
    }
    exerciseData {
      masteryChallengeStatus(courseId: $topicId) {
        totalQuestions
        isEligible
        currentAttempt {
          id
          canResume
          timeLeftSeconds
          expirationTime
          expirationPeriodHours
          __typename
        }
        __typename
      }
      __typename
    }
    latestCourseChallengeAttempt(courseId: $topicId) {
      id
      numAttempted
      numCorrect
      completedDate
      canResume
      isCompleted
      __typename
    }
    __typename
  }
}