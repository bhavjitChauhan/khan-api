query autoModerationResultByFeedbackType($feedbackType: FeedbackType!, $content: String!) {
  autoModerationResultByFeedbackType(
    feedbackType: $feedbackType
    content: $content
  ) {
    ...ModerationResultFragment
    __typename
  }
}

fragment ModerationResultFragment on AutoModerationResult {
  autoModerationAction {
    autoDelete
    autoHide
    __typename
  }
  autoHideCriteria {
    isShortPost
    containsLargeWords
    containsASCIIArt
    lowQualityScore {
      totalScore
      components {
        code
        totalScorePercentage
        terms
        __typename
      }
      __typename
    }
    __typename
  }
  __typename
}