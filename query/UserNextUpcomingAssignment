query UserNextUpcomingAssignment($contentDescriptors: [String!]!) {
  user {
    id
    assignmentDueNext {
      id
      studentList {
        ...Classroom
        __typename
      }
      __typename
    }
    assignmentsPageForContentItems(contentDescriptors: $contentDescriptors) {
      assignments {
        id
        studentList {
          ...Classroom
          __typename
        }
        __typename
      }
      __typename
    }
    __typename
  }
}

fragment Classroom on StudentList {
  cacheId
  coachKaid
  descriptor
  hasAssignments
  id
  name
  signupCode
  __typename
}