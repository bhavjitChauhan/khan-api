query KAClassroom_GetLearnerAssignmentData($input: LearningDashboardQueryInput) {
  learningDashboard(input: $input) {
    kaid
    classroomDescriptor
    queue {
      id
      completionState
      completedOn
      dueDate
      ... on ContentAssignment {
        content {
          id
          translatedTitle
          description
          contentKind
          contentDescriptor
          __typename
        }
        assignment {
          id
          title
          unit {
            id
            translatedTitle
            __typename
          }
          __typename
        }
        __typename
      }
      ... on UnitPacingSuggestion {
        content {
          id
          translatedTitle
          description
          contentKind
          contentDescriptor
          __typename
        }
        masteryAssignment {
          id
          unit {
            id
            translatedTitle
            __typename
          }
          __typename
        }
        __typename
      }
      __typename
    }
    __typename
  }
}