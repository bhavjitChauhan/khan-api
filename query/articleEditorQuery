query articleEditorQuery($contentId: String!) {
  contentEditingStatus {
    editingDisabled
    publishDisabled
    __typename
  }
  isEditableByCurrentUser(contentId: $contentId, contentKind: "Article")
  isPublishableByCurrentUser(contentId: $contentId, contentKind: "Article")
  articleRevisionById(id: $contentId) {
    ...ArticleRevision
    __typename
  }
}

fragment ArticleRevision on ArticleRevision {
  id
  contentId
  contentKind
  creationDate
  sha
  authorKey
  customDescriptionTag
  customTitleTag
  description
  descriptionHtml: description
  doNotPublish
  sourceKaLocale
  sourceLanguage: sourceKaLocale
  slug
  readableId: slug
  title
  sponsored
  thumbnailData
  thumbnailCache
  alternateSlugs
  assessmentItemTags
  authorNames
  clarificationsEnabled
  perseusContent
  listed
  __typename
}