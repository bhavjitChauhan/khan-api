query getContentItem($descriptors: [String!]!) {
  contentForDescriptors(descriptors: $descriptors) {
    id
    contentDescriptor
    contentKind
    translatedTitle
    translatedDescription
    mappedStandards {
      id
      setId
      standardId
      __typename
    }
    lesson: parentTopic {
      id
      translatedTitle
      unit: parent {
        id
        translatedTitle
        course: parent {
          id
          translatedTitle
          __typename
        }
        __typename
      }
      __typename
    }
    __typename
  }
}