mutation signupAdultWithPasswordMutation($email: String!, $password: String!, $firstname: String!, $lastname: String!, $role: UserRole!, $birthdate: Date) {
  signupAdultWithPassword(
    email: $email
    password: $password
    firstname: $firstname
    lastname: $lastname
    role: $role
    birthdate: $birthdate
  ) {
    user {
      id
      kaid
      canAccessDistrictsHomepage
      isTeacher
      hasUnresolvedInvitations
      preferredKaLocale {
        id
        kaLocale
        status
        __typename
      }
      __typename
    }
    error {
      code
      __typename
    }
    __typename
  }
}