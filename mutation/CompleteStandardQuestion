mutation CompleteStandardQuestion($assessmentId: String!, $stepId: String!, $correct: Boolean!, $response: String!) {
  completeStandardQuestion(
    input: {assessmentId: $assessmentId, stepId: $stepId, correct: $correct, response: $response}
  ) {
    result {
      task {
        ...TaskFragment
        __typename
      }
      __typename
    }
    error {
      code
      debugMessage
      __typename
    }
    __typename
  }
}

fragment TaskFragment on AssessmentTask {
  id
  expirationTime
  questionsCompleted
  estimatedQuestionsRemaining
  currentStep {
    stepNumber
    stepId
    type
    assessmentItem {
      id
      exerciseId
      itemData
      __typename
    }
    __typename
  }
  __typename
}