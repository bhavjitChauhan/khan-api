mutation getOrCreateAssessmentTask($assessmentId: String!) {
  getOrCreateAssessmentTask(input: {assessmentId: $assessmentId}) {
    result {
      task {
        id
        expirationTime
        questionsCompleted
        estimatedQuestionsRemaining
        currentStep {
          stepNumber
          assessmentItem {
            id
            exerciseId
            itemData
            __typename
          }
          __typename
        }
        __typename
      }
      __typename
    }
    __typename
  }
}