  updateTask(taskId: $taskId, taskType: $taskType, newTaskState: $newTaskState, newTaskStateHash: $newTaskStateHash, prevTaskStateHash: $prevTaskStateHash) {
    task {
      ...gtp_taskFragment
      __typename
    }
    egud {
      ...gtp_egudFragment
      __typename
    }
    statusCode
    tpud {
      ...gtp_tpudFragment
      __typename
    }
    __typename
  }
}
