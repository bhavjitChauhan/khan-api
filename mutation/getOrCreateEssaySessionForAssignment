mutation getOrCreateEssaySessionForAssignment($assignmentId: String!) {
  getOrCreateEssaySessionForAssignment(assignmentID: $assignmentId) {
    essaySessionSummary {
      id
      essayTitle
      lastUpdated
      currentStage
      assignmentId: assignmentID
      __typename
    }
    error {
      debugMessage
      __typename
    }
    __typename
  }
}