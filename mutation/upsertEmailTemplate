mutation upsertEmailTemplate($id: ID!, $name: String!, $textTemplate: String!, $htmlTemplate: String!, $exampleData: Map!) {
  upsertEmailTemplate(
    id: $id
    name: $name
    htmlTemplate: $htmlTemplate
    textTemplate: $textTemplate
    exampleData: $exampleData
  ) {
    updatedTemplate {
      id
      name
      htmlTemplate
      textTemplate
      exampleData
      __typename
    }
    error {
      code
      debugMessage
      __typename
    }
    __typename
  }
}