mutation loginWithPasswordAndRecoveryCodeMutation($identifier: String!, $password: String!, $twoFactorRecoveryCode: String!) {
  loginWithPassword(
    identifier: $identifier
    password: $password
    twoFactorRecoveryCode: $twoFactorRecoveryCode
  ) {
    user {
      id
      kaid
      canAccessDistrictsHomepage
      isTeacher
      hasUnresolvedInvitations
      preferredKaLocale {
        id
        kaLocale
        status
        __typename
      }
      __typename
    }
    isFirstLogin
    error {
      code
      __typename
    }
    __typename
  }
}