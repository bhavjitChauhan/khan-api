mutation contentEditorEditChallenge($input: EditChallengeInput!, $sha: String!) {
  editChallenge(input: $input, sha: $sha) {
    challenge {
      ...ChallengeRevision
      __typename
    }
    error {
      code
      debugMessage
      conflictSha
      __typename
    }
    __typename
  }
}

fragment ChallengeRevision on ChallengeRevision {
  id
  contentId
  contentKind
  sha
  doNotPublish
  slug
  listed
  title
  description
  authorName
  code
  codeFormat
  tests
  testsFormat
  height
  width
  userAuthoredContentType
  __typename
}