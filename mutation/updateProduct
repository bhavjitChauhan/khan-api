mutation updateProduct($id: ID!, $input: MutateProductInput!) {
  updateProduct(id: $id, input: $input) {
    product {
      id
      name
      isActive
      description
      extProductID
      validationBillingCountries
      prices {
        currency
        extProductID
        id
        recurringInterval
        recurringIntervalCount
        type
        unitAmount
        __typename
      }
      __typename
    }
    error {
      code
      debugMessage
      __typename
    }
    __typename
  }
}